{
    "manifest_version": 2,
    "name": "HackerTagger",
    "short_name": "HackerTagger",
    "version": "19",
    "description": "Tag users on HN with useful metadata.",
    "minimum_chrome_version": "23",
    "content_scripts": [
        {
            "matches": [
                "https://news.ycombinator.com/*"
            ],
            "js": [
                "content_script.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "styles.css"
    ]
}
